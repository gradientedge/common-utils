{
  "scripts": {
    "clean": "pnpm -r clean",
    "lint": "eslint \"**/*.ts\" --max-warnings=0",
    "prettier": "prettier --check \"**/*.{ts,js,json}\"",
    "prettify": "prettier --write \"**/*.{ts,js,json}\"",
    "test": "jest --config=jest.config.ts",
    "build": "pnpm clean && pnpm -r build",
    "build:watch": "tsc --build --incremental --watch",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "husky install",
    "publish": "pnpm changeset publish",
    "validate": "pnpm prettier && pnpm lint && pnpm build && pnpm test",
    "version": "pnpm changeset version && pnpm i --lockfile-only"
  },
  "private": true,
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.4",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "jest-extended": "^3.2.4",
    "jest-mock": "^29.4.3",
    "nock": "^13.3.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.5"
  },
  "workspaces": [
    "packages/**"
  ]
}
